<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="dkiscm.jobmatrix">
      <head>
      </head>
      <body>

          <metal:title fill-slot="content-title">
              <h1>
                  <tal:block replace="context/job_code"/> : 
                  <tal:block replace="context/pretty_title_or_id"/>
              </h1>
          </metal:title>
    <metal:description fill-slot="content-description"></metal:description>

    <metal:main fill-slot="content-core">


    <metal:content-core define-macro="content-core">
        <table class="dkiscm-jobview-jobsummary">

            <tr>
                <td class="leftcol">
                    <div><h4>Job Grouping</h4></div>
                    <div tal:content="structure view/w/job_grouping/render"></div>
                    <div><h4>Education</h4></div>
                    <div tal:content="structure view/w/education/render"></div>
                </td>
                <td>
                    <h4>Job Description</h4>
                    <p tal:content="context/description"></p>

                    <h4>Simiar Job Titles</h4>
                    <div tal:content="structure view/w/similar_jobs/render"></div>
                </td>
            </tr>
        </table>

      <table class="dkiscm-skilltable">
          <thead>
              <tr>
                  <th>No</th>
                  <th>Description</th>
                  <th>Entry</th>
                  <th>Intermediate</th>
                  <th>Senior</th>
                  <th>Advanced</th>
                  <th>Master</th>
              </tr>
          </thead>
          <tbody>
              <tr class="required-row">
                  <td>1</td>
                  <td>Industry Experience</td>
                  <td tal:repeat="exp view/industry_experience">
                      <a tal:attributes="href string:${context/absolute_url}/level_view?lvl=${exp/value}"
                          tal:content="exp/title"></a>
                  </td>
              </tr>
              <tr class="required-row">
                  <td>2</td>
                  <td>Industry Certification</td>
                  <tal:block define="vals context/industry_certification|nothing;
                      item python:vals[0] if vals else None">
                      <tal:c condition="item">
                          <td><span tal:replace="item/entry"/>&nbsp;</td>
                          <td><span tal:replace="item/intermediate"/>&nbsp;</td>
                          <td><span tal:replace="item/senior"/>&nbsp;</td>
                          <td><span tal:replace="item/advanced"/>&nbsp;</td>
                          <td><span tal:replace="item/master"/>&nbsp;</td>
                      </tal:c>
                      <tal:c condition="not:item">
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                           <td>&nbsp;</td>
                      </tal:c>

                  </tal:block>

              </tr>

              <tr class="required-row">
                  <td>3</td>
                  <td>Salary Range</td>
                  <tal:block define="vals context/salary_range|nothing;
                      item python:vals[0] if vals else None">
                      <tal:c condition="item">
                          <td><span tal:replace="item/entry"/>&nbsp;</td>
                          <td><span tal:replace="item/intermediate"/>&nbsp;</td>
                          <td><span tal:replace="item/senior"/>&nbsp;</td>
                          <td><span tal:replace="item/advanced"/>&nbsp;</td>
                          <td><span tal:replace="item/master"/>&nbsp;</td>
                      </tal:c>
                      <tal:c condition="not:item">
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                           <td>&nbsp;</td>
                      </tal:c>
                  </tal:block>
              </tr>
          </tbody>
      </table>

      <h2>Technical Skills Competency</h2>
      <table class="dkiscm-skilltable">
          <thead>
              <tr>
                  <th>No</th>
                  <th>Skill</th>
                  <th>Entry</th>
                  <th>Intermediate</th>
                  <th>Senior</th>
                  <th>Advanced</th>
                  <th>Master</th>
              </tr>
          </thead>
          <tbody>
              <tal:block repeat="item context/skills_competency">
                  <tr tal:attributes="class python:'required-row' if item['is_required'] else ''">
                      <td tal:define="idx repeat/item/index">
                          <tal:r replace="python:idx + 1"/>
                      </td>
                      <tal:c condition="item">
                          <td><span tal:replace="item/skill"/>&nbsp;</td>
                          <td><span tal:replace="item/entry"/>&nbsp;</td>
                          <td><span tal:replace="item/intermediate"/>&nbsp;</td>
                          <td><span tal:replace="item/senior"/>&nbsp;</td>
                          <td><span tal:replace="item/advanced"/>&nbsp;</td>
                          <td><span tal:replace="item/master"/>&nbsp;</td>
                      </tal:c>
                      <tal:c condition="not:item">
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                      </tal:c>
                  </tr>
              </tal:block>
          </tbody>
      </table>
      <h2>Soft Skills Competency</h2>
      <table class="dkiscm-skilltable">
          <thead>
              <tr>
                  <th>No</th>
                  <th>Skill</th>
                  <th>1</th>
                  <th>2</th>
                  <th>3</th>
                  <th>4</th>
                  <th>5</th>
              </tr>
          </thead>
          <tbody>
              <tal:block repeat="item context/softskills_competency">
                  <tr tal:attributes="class python:'required-row' if item['is_required'] else ''">
                      <td tal:define="idx repeat/item/index">
                          <tal:r replace="python:idx + 1"/>
                      </td>
                      <tal:c condition="item">
                          <td><span tal:replace="item/skill"/>&nbsp;</td>
                          <td><span tal:replace="item/col1"/>&nbsp;</td>
                          <td><span tal:replace="item/col2"/>&nbsp;</td>
                          <td><span tal:replace="item/col3"/>&nbsp;</td>
                          <td><span tal:replace="item/col4"/>&nbsp;</td>
                          <td><span tal:replace="item/col5"/>&nbsp;</td>
                      </tal:c>
                      <tal:c condition="not:item">
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                      </tal:c>
                  </tr>
              </tal:block>
          </tbody>
      </table>


  </metal:content-core>
</metal:main>

</body>
</html>

