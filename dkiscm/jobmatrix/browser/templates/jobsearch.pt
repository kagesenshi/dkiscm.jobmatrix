<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="context/main_template/macros/master">
    <head>
        <metal:block fill-slot="javascript_head_slot">
            <script>
                $(document).ready(function () {
                    var url = $('#job_title').attr('data-autocompleteurl');
                    $('#job_title').autocomplete(url, {
                        extraParams: {
                            'industry_cluster': function () {
                                return $('#industry_cluster').val();
                            }
                        }
                    });
                });
            </script>
        </metal:block>
    </head>
    <body>
        <div metal:fill-slot="content-core">
            <form tal:attributes="action string:${context/absolute_url}/jobsearch_results"
                method="GET">

                <table>
                    <tr>
                        <td>
                            <label for="industry_cluster">Industry Cluster</label>
                        </td>
                        <td>
                            <select id="industry_cluster" name="industry_cluster">
                                <option tal:repeat="cluster view/industry_clusters"
                                    tal:attributes="value cluster/value"
                                    tal:content="cluster/title">
                                </option>
                            </select>
                        </td>
                        </tr><tr>
                        <td>
                            <label for="job_title">Job Title</label>
                        </td>
                        <td>
                            <input id="job_title" name="job_title"
                                tal:attributes="data-autocompleteurl string:${context/absolute_url}/jobtitle_autocomplete"/></td>

                        </tr><tr>
                        <td>
                            <label for="experience">Experience</label>
                        </td>
                        <td>
                            <select name="experience" id="experience">
                                <option tal:repeat="experience view/experience_years"
                                    tal:attributes="value experience/value"
                                    tal:content="experience/title">
                                </option>
                            </select>
                        </td>
                    </tr>
                </table>
                <div>
                    <input type="submit" value="Submit"/>
                </div>
            </form>
        </div>
    </body>
</html>
