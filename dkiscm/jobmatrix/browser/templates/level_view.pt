<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="dkiscm.jobmatrix">
      <head>
      </head>
      <body>

          <metal:title fill-slot="content-title">
              <h1>
                  <tal:block replace="context/job_code"/> : 
                  <tal:block replace="context/pretty_title_or_id"/>
              </h1>
          </metal:title>
    <metal:description fill-slot="content-description"></metal:description>

    <metal:main fill-slot="content-core">


    <metal:content-core define-macro="content-core" tal:define="leveldata view/leveldata">
        <table class="dkiscm-jobview-jobsummary">

            <tr>
                <td class="leftcol">
                    <div><h4>Job Grouping</h4></div>
                    <div tal:content="structure view/w/job_grouping/render"></div>
                    <div><h4>Education</h4></div>
                    <div tal:content="structure view/w/education/render"></div>
                </td>
                <td>
                    <h4>Job Description</h4>
                    <p tal:content="context/description"></p>

                    <h4>Simiar Job Titles</h4>
                    <div tal:content="structure view/w/similar_jobs/render"></div>

                    <h4>Industry Certification</h4>
                    <div tal:content="leveldata/industry_certification"></div>

                    <h4>Salary Range</h4>
                    <div tal:content="leveldata/salary_range"></div>
                </td>
            </tr>
        </table>

        <h2>Skills Competency</h2>
        <div id="dkiscm-levelview-skillcompetency">
            <div class="skillbox" 
                tal:repeat="val leveldata/skills_competency"
                tal:content="val/value"
                tal:attributes="class python:'skillbox ' + 'required-skill' if val[
                                    'required'] else ''">
            </div>
        </div>
        <div class="visualClear"></div>
      <h2>Soft Skills Competency</h2>
      <table class="dkiscm-skilltable">
          <thead>
              <tr>
                  <th>No</th>
                  <th>Skill</th>
                  <th>1</th>
                  <th>2</th>
                  <th>3</th>
                  <th>4</th>
                  <th>5</th>
              </tr>
          </thead>
          <tbody>
              <tal:block repeat="item context/softskills_competency">
                  <tr tal:attributes="class python:'required-row' if item['is_required'] else ''">
                      <td tal:define="idx repeat/item/index">
                          <tal:r replace="python:idx + 1"/>
                      </td>
                      <tal:c condition="item">
                          <td><span tal:replace="item/skill"/>&nbsp;</td>
                          <td><span tal:replace="item/col1"/>&nbsp;</td>
                          <td><span tal:replace="item/col2"/>&nbsp;</td>
                          <td><span tal:replace="item/col3"/>&nbsp;</td>
                          <td><span tal:replace="item/col4"/>&nbsp;</td>
                          <td><span tal:replace="item/col5"/>&nbsp;</td>
                      </tal:c>
                      <tal:c condition="not:item">
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                          <td>&nbsp;</td>
                      </tal:c>
                  </tr>
              </tal:block>
          </tbody>
      </table>


  </metal:content-core>
</metal:main>

</body>
</html>

